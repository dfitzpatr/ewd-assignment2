body {
      padding-top: 20px;
    }

.books {
      list-style: none;
    }
	
.thumb {
      float: left;
      margin: -0.5em 1em 1.5em 0;
      padding-bottom: 1em;
      height: 100px;
      width: 100px;
    }

.books li {
      height: 95px;
      padding-top: 15px;
    }
	
/** Detail View **/
    img.book {

      border: 1px solid black;

      background-color: white;
      padding: 2em;
      height: 500px;
      width: 400px;
    }

    ul.book-thumbs {
      margin: 0;
      list-style: none;
    }

    ul.book-thumbs li {
      border: 1px solid black;
      display: inline-block;
      margin: 1em;
      background-color: white;
    }

    ul.book-thumbs img {
      height: 100px;
      width: 200px;
      padding: 1em;
    }

    span{
      font-weight: bold;
      font-size: 1.2em;
    }

    dt {
      font-weight: bold;
    }

    h1 {
      border-bottom: 1px solid gray;
    }